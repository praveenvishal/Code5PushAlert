<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/mt_gray2</item>
        <item name="android:textColor">@android:color/black</item>

    </style>
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/mt_gray3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.App.ErrorTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/mt_red</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
